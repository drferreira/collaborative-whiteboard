<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <lifecycle>
        <phase-listener>br.org.tutty.collaborative_whiteboard.cw_web.filters.MultiPageMessagesSupport</phase-listener>
    </lifecycle>

    <application>
        <locale-config>
            <default-locale>pt_BR</default-locale>
            <supported-locale>pt_BR</supported-locale>
        </locale-config>

        <resource-bundle>
            <base-name>properties/messages</base-name>
            <var>messages</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>properties/overlay_task</base-name>
            <var>overlay_task</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>properties/chat</base-name>
            <var>chat</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>properties/login</base-name>
            <var>login</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>properties/account_creation</base-name>
            <var>accountCreation</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>properties/backlog</base-name>
            <var>backlog</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>properties/whiteboard</base-name>
            <var>whiteboard</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>properties/project</base-name>
            <var>project_bundle</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>properties/tasks</base-name>
            <var>tasks_bundle</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>properties/iteration-creation</base-name>
            <var>iteration_creation</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>properties/iteration-settings</base-name>
            <var>iteration_settings</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>properties/exit</base-name>
            <var>exit</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>properties/status</base-name>
            <var>status_bundle</var>
        </resource-bundle>
    </application>

    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>HOME_PAGE</from-outcome>
            <to-view-id>/pages/session/whiteboard.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>BACKLOG_PAGE</from-outcome>
            <to-view-id>/pages/session/backlog.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>ACCOUNT_CREATION_PAGE</from-outcome>
            <to-view-id>/pages/accountCreation.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>WELCOME_PAGE</from-outcome>
            <to-view-id>/pages/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>PROJECT_PAGE</from-outcome>
            <to-view-id>/pages/session/project.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>TASKS_PAGE</from-outcome>
            <to-view-id>/pages/session/tasks.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>ITERATION_SETTINGS_PAGE</from-outcome>
            <to-view-id>/pages/session/iteration.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
</faces-config>